.page-header
  .pull-right
    =link_to "Edit", edit_plant_entry_spraying_path(@plant_entry, @general_note), class: "btn btn-info"
  %h2
    = "#" + @plant.id_number + " " + @plant.strain_name + " - Sprayings"

%dl.dl-horizontal
  %dt Water Amount
  %dd= @spraying.water_amount
  %dt Chemicals Added
  %dd= @spraying.chemicals_added
