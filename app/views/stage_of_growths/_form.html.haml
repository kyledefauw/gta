= form_for [@plant, @stage_of_growth], html: {class: "form-horizontal"} do |f|
  = render partial: "/shared/errors", locals:{object: @stage_of_growth}
  .row
    .well.col-md-offset-2.col-md-8
      .form-group
        = f.label :stage, class: "col-md-4 control-label"
        .col-md-8
          = f.text_field :stage, class: "form-control"
      .form-group
        = f.label :plant_date, class: "col-md-4 control-label"
        .col-md-8
          = f.date_field :plant_date, class: "form-control"
      .form-group
        = f.label :pot_size, class: "col-md-4 control-label"
        .col-md-8
          = f.text_field :pot_size, class: "form-control"

      = fields_for :grow_medium do |g|
        .form-group
          = g.label :brand, class: "col-md-4 control-label"
          .col-md-8
            = g.text_field :brand, class: "form-control"
        .form-group
          = g.label :nutrients_added, class: "col-md-4 control-label"
          .col-md-8
            = g.text_field :nutrients_added, class: "form-control"

      .form-group
        .col-md-offset-4.col-md-4
          = f.submit class: "btn btn-success form-control"
